#!/bin/bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# apt-get install nasm qemu texinfo

mkdir -p /tmp/src
cd /tmp/src || exit

PREFIX="/usr/local/i386elfgcc"
TARGET=i386-elf
PATH="$PREFIX/bin:$PATH"

# binutils
curl -O http://ftp.gnu.org/gnu/binutils/binutils-2.37.tar.gz # If the link 404's, look for a more recent version
tar xzf binutils-2.37.tar.gz
mkdir binutils-build
cd binutils-build || exit
../binutils-2.37/configure --target=$TARGET --enable-interwork --enable-multilib --disable-nls --disable-werror --prefix=$PREFIX 2>&1 | tee configure.log
make all install 2>&1 | tee make.log

cd ..

# gcc
curl -O https://ftp.gnu.org/gnu/gcc/gcc-11.2.0/gcc-11.2.0.tar.gz
tar xzf gcc-11.2.0.tar.gz
cd gcc-11.2.0 || exit
./contrib/download_prerequisites
cd ..
mkdir gcc-build
cd gcc-build || exit
../gcc-11.2.0/configure --target=$TARGET --prefix="$PREFIX" --disable-nls --disable-libssp --enable-languages=c --without-headers
make all-gcc 
make all-target-libgcc 
make install-gcc 
make install-target-libgcc 
cd ..

# gdb
curl -O http://ftp.gnu.org/gnu/gdb/gdb-11.1.tar.gz
tar xzf gdb-11.1.tar.gz
mkdir gdb-build
cd gdb-build || exit
export PREFIX="/usr/local/i386elfgcc"
export TARGET=i386-elf
../gdb-11.1/configure --target="$TARGET" --prefix="$PREFIX" --program-prefix=i386-elf-
make
make install

cd $DIR || exit